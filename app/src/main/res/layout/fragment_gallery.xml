<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background=" #964B00"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:id="@+id/text_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="406dp"
        android:layout_height="585dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_gallery">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAntiguedad01"
                android:layout_width="wrap_content"
                android:layout_height="287dp"
                android:src="@drawable/img1" />

            <ImageView
                android:id="@+id/imgAntiguedad02"
                android:layout_width="395dp"
                android:layout_height="300dp"
                android:src="@drawable/img2" />

            <ImageView
                android:id="@+id/imgAntiguedad03"
                android:layout_width="395dp"
                android:layout_height="300dp"
                android:src="@drawable/img3" />

            <ImageView
                android:id="@+id/imgAntiguedad04"
                android:layout_width="395dp"
                android:layout_height="300dp"
                android:src="@drawable/img4" />

            <ImageView
                android:id="@+id/imgAntiguedad05"
                android:layout_width="395dp"
                android:layout_height="300dp"
                android:src="@drawable/img5" />

            <ImageView
                android:id="@+id/imgAntiguedad06"
                android:layout_width="395dp"
                android:layout_height="300dp"
                android:src="@drawable/img6" />

            <ImageView
                android:id="@+id/imgAntiguedad07"
                android:layout_width="395dp"
                android:layout_height="300dp"
                android:src="@drawable/img7" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>